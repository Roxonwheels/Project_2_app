<h2>Disney characters</h2>

<div class="row row-cols-1 row-cols-md-3 g-3" >
{{#each disneyCharacters}}
  <div class="col">
    <img src={{formatURL this.imageUrl}} class="card-img-top" alt="{{this.name}}">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      {{!-- <!-- Button trigger modal --> --}}
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#{{this._id}}">
        More info
      </button>
    </div>
  </div>
  
  <!-- Modal -->
  <div class="modal fade black" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <img src={{formatURL this.imageUrl}} alt="{{this.name}}">
          <p>Films in which {{this.name}} appears:</p>
          <ul>
            {{#each this.films}}
                <li>{{this}}</li>
            {{/each}}
          </ul>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <form method="POST" action="/characters/create/{{this._id}}">
            <button type="submit" class="btn btn-primary">Save to Favorites</button>
          </form>
          
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>